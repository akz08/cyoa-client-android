<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.akz08.cyoaclient" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="io.github.akz08.cyoaclient.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.akz08.cyoaclient.CharacterSelectActivity"
            android:label="@string/title_activity_character_select" >
        </activity>
        <activity
            android:name="io.github.akz08.cyoaclient.MessageActivity"
            android:label="@string/title_activity_message"
            android:parentActivityName="io.github.akz08.cyoaclient.CharacterSelectActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.akz08.cyoaclient.CharacterSelectActivity" />
        </activity>
    </application>

</manifest>
